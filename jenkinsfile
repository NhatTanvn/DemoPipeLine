pipeline {
    agent any 
    stages {
        stage('Build') { 
            steps { 
                sh 'make' 
            }
        }
        stage('Test'){
            steps {
                sh 'make check'
                junit 'reports/**/*.xml' 
            }
        }
        stage('Deploy') {
            steps {
                sh 'make publish'
            }
        }
    }
}
node { 
    stage('Clone') {
        git url: 'https://github.com/NhatTanvn/DemoPipeLine/DemoPipeLine.com.git'
    }
    stage('Build') {
        sh 'mvn clean install -f DemoPipeLine/pom.xml'
    }
}
